; 扇区起始地址和loader加载地址
LOADER_START_SECTOR equ 0x2
LOADER_SECTOR_NUM equ 0x2
LOADER_BASE_ADDR equ 0x900

;============gdt描述符属性==============
DESC_G_4K   equ 1_00000000000000000000000b ; 23bit
DESC_D_32   equ 1_0000000000000000000000b ; 22bit
DESC_L  equ 0_000000000000000000000b ; 21bit
DESC_AVL    equ 0_00000000000000000000b ; 20bit
DESC_LIMIT_CODE2    equ 1111_0000000000000000b ; 16bit
DESC_LIMIT_DATA2    equ DESC_LIMIT_CODE2 ; 16bit
DESC_LIMIT_VIDEO2   equ 0000_000000000000000b ; 16bit
DESC_P  equ 1_000000000000000b ; 15bit
DESC_DPL_0  equ 00_0000000000000b ; 13bit
DESC_DPL_1  equ 01_0000000000000b ; 13bit
DESC_DPL_2  equ 10_0000000000000b ; 13bit
DESC_DPL_3  equ 11_0000000000000b ; 13bit
DESC_S_CODE equ 1_000000000000b ; 12bit
DESC_S_DATA equ DESC_S_CODE ; 12bit
DESC_S_SYS  equ 0_000000000000b ; 12bit
DESC_TYPE_CODE  equ 1000_00000000b ;x=1,c=0,r=0,a=0 代码段是可执行的，非一致性，不可读，已访问位 a 清 0 , 8bit
DESC_TYPE_DATA equ 0010_00000000b ;x=0,e=0,w=1,a=0 数据段是不可执行的，向上扩展的，可写，已访问位 a 清 0, 8bit
DESC_CODE_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_CODE2 + DESC_P + DESC_DPL_0 + DESC_S_CODE + DESC_TYPE_CODE + 0x00
DESC_DATA_HIGH4 equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_DATA2 + DESC_P + DESC_DPL_0 + DESC_S_DATA + DESC_TYPE_DATA + 0x00
; 注意: 书上设置DESC_VIDEO_HIGH4的0-7位段基地址0x00是错的，应改成0x0b
DESC_VIDEO_HIGH4    equ (0x00 << 24) + DESC_G_4K + DESC_D_32 + DESC_L + DESC_AVL + DESC_LIMIT_VIDEO2 + DESC_P +  DESC_DPL_0 + DESC_S_DATA + DESC_TYPE_DATA + 0x0b
;选择子属性
RPL0    equ 00b
RPL1    equ 01b
RPL2    equ 10b
RPL3    equ 11b
TI_GDT equ 000b
TI_LDT equ 100b
